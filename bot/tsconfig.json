{
  "compilerOptions": {
    // Enable latest features
    "target": "ESNext",
    "module": "ESNext",
		"moduleResolution": "node",

    // Bundler mode
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./dist",

    // Interop
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    // Best practices
    "strict": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
